<html>
<body>

<h1>Add A New Game</h1>

{{#error}}
    <div style="color: red">{{error}}</div>
{{/error}}

<form action="/create-game" method="post">

    <div>
        <input type="text" name="name" placeholder="Game name">
    </div>

    <div>
        <input type="text" name="genre" placeholder="Game genre">
    </div>

    <div>
        <input type="text" name="platform" placeholder="Platform">
    </div>

    <div>
        <input type="text" name="releaseYear" placeholder="Release year">
    </div>

    <button type="submit">Add Game</button>

</form>



</body>
</html>